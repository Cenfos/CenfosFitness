---
const plans = [
  {
    title: 'Plan Semanal',
    price: '29',
    features: [
      'Plan de entrenamiento personalizado',
      'Guía nutricional básica',
      'Acceso al calendario',
      'Soporte por email'
    ]
  },
  {
    title: 'Plan Mensual',
    price: '89',
    popular: true,
    features: [
      'Todo lo del plan semanal',
      'Consultas personalizadas',
      'Ajustes semanales del plan',
      'Recetas exclusivas',
      'Soporte prioritario'
    ]
  }
];
---

<section id="planes" class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900">Elige tu Plan</h2>
      <p class="mt-4 text-lg text-gray-600">
        Planes flexibles adaptados a tus necesidades
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-5xl mx-auto">
      {plans.map(plan => (
        <div class={`bg-white rounded-lg shadow-lg overflow-hidden ${plan.popular ? 'border-2 border-primary-500' : ''}`}>
          {plan.popular && (
            <div class="bg-primary-500 text-white text-center py-2">
              Más Popular
            </div>
          )}
          <div class="p-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">{plan.title}</h3>
            <div class="mb-6">
              <span class="text-4xl font-bold">{plan.price}€</span>
              <span class="text-gray-600">/{plan.title === 'Plan Semanal' ? 'semana' : 'mes'}</span>
            </div>
            <ul class="space-y-4 mb-6">
              {plan.features.map(feature => (
                <li class="flex items-center">
                  <svg class="h-5 w-5 text-primary-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <a
              href={`/planes/${plan.title.toLowerCase().replace(' ', '-')}`}
              class={`block text-center py-3 px-6 rounded-lg font-semibold transition-colors ${
                plan.popular
                  ? 'bg-primary-600 hover:bg-primary-700 text-white'
                  : 'bg-gray-100 hover:bg-gray-200 text-gray-900'
              }`}
            >
              Seleccionar Plan
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>